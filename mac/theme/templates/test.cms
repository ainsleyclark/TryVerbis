                                    <h3 class="mb-0">Production team</h3>
                                </div>
                            </div>
                            {{ range $post := . }}
                                {{ $department := field "department" .Id | toString }}
                                {{ if eq $department "production" }}
                                    {{ . }}
                                {{ end }}
                            {{ end }}
                            <!-- =====================
                                Business Services Team
                                ===================== -->
                            <div class="shuffle-item shuffle-item-sizer" data-groups='["business"]'></div>
                            <div class="shuffle-item shuffle-title margin-top margin-large" data-groups='["business"]'>
                                <div class="text-cont">
                                    <h3 class="mb-0">Business Services team</h3>
                                </div>
                            </div>
