{{ define "content" }}

    {{ $result := posts (dict "resource" "team" "limit" 99999999 "order_direction" "asc") }}
    <section class="section-padding section-padding-bottom">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-14 col-hd-12">
                    <div class="row shuffle-cont">
                        {{ with $result.Posts }}
                            <!-- =====================
                                 Directors
                                 ===================== -->
                            <div class="shuffle-item shuffle-item-sizer" data-groups='["directors"]'></div>
                            <div class="shuffle-item shuffle-title margin-top" data-groups='["directors"]'>
                                <div class="text-cont">
                                    <h3 class="mb-0">Directors</h3>
                                </div>
                            </div>
                            {{ range $post := . }}
                                {{ $department := field "department" .Id | toString }}
                                {{ if eq $department "directors"}}
                                    {{ . }}
                                {{ end }}
                            {{ end }}
                            <!-- =====================
                                SEO Team
                                ===================== -->
                            <div class="shuffle-item shuffle-item-sizer" data-groups='["seo"]'></div>
                            <div class="shuffle-item shuffle-title margin-top margin-large" data-groups='["seo"]'>
                                <div class="text-cont">
                                    <h3 class="mb-0">SEO Team</h3>
                                </div>
                            </div>
                            {{ range $post := . }}
                                {{ $department := field "department" .Id | toString }}
                                {{ if eq $department "seo"}}
                                    {{ . }}
                                {{ end }}
                            {{ end }}
                            <!-- =====================
                                 Content Team
                                 ===================== -->
                            <div class="shuffle-item shuffle-item-sizer" data-groups='["content"]'></div>
