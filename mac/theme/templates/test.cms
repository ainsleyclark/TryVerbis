                                </div>
                            </div>
                            {{ range $post := . }}
                                {{ $department := field "department" .Id | toString }}
                                {{ if eq $department "content"}}
                                    {{ . }}
                                {{ end }}
                            {{ end }}
                            <!-- =====================
                                Tech Team
                                ===================== -->
                            <div class="shuffle-item shuffle-item-sizer" data-groups='["tech"]'></div>
                            <div class="shuffle-item shuffle-title margin-top margin-large" data-groups='["tech"]'>
                                <div class="text-cont">
                                    <h3 class="mb-0">Technology, Development<br> and Design team</h3>
                                </div>
                            </div>
                            {{ range $post := . }}
                                {{ $department := field "department" .Id | toString }}
