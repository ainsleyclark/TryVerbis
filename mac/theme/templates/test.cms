                                    {{ . }}
                                {{ end }}
                            {{ end }}
                        {{ end }}
                    </div><!-- /Shuffle Cont -->
                </div><!-- /Col -->
            </div><!-- /Row -->
        </div><!-- /Container -->
    </section>

